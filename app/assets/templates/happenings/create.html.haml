#create-happening.container(ng-controller="HappeningCreateController")
  #controls(ng-class='{sidebar: sidebar}')
    %h4(ng-hide='sidebar') What kind of Happening is this?
    %btn-group
      %button.btn.btn-default.btn-roving(type='button' ng-click='showRoving()')Roving
      %button.btn.btn-default.btn-stationary(type='button' ng-click='showStationary()')Stationary
  #stationary-happening-input.container(ng-if='stationary')
    %h3 Stationary Event
    %form(name="editProfileForm" role="form" ng-model="happening" ng-submit="createHappening()")
      .form-group
        %label(for="title")
          What
        %input(name="title" ng-model="happening.title" type="text" placeholder="party at big moma's house" id="title")
      .form-group
        %label(for="description")
          Why
        %textarea(name="description" ng-model="happening.description" type="text" placeholder="It gonna be the bomb yo!" id="description")
      %input.btn.btn-submit(type="submit" value="create happening")
  #roving-happening-input.container(ng-if="roving")
    %h3 Roving Event
    %form(name="editProfileForm" role="form" ng-model="happening" ng-submit="createHappening()")
      .form-group
        %label(for="theme")
          Area of Focus
        %input(name="theme" ng-model="happening.theme" type="text" placeholder="basketball, politics, etc." id="theme")
      .form-group
        %label(for="description")
          Where
        %input(name="where" ng-model="happening.where" type="text" placeholder="123 Good St." id="where")
      .form-group
        %label(for="description")
          When
        %input(name="when" ng-model="happening.when" type="text" placeholder="7:00 PM" id="when")
      %input.btn.btn-submit(type="submit" value="create happening")
